<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Demoqa_Regression_Suite" parallel="tests">
    <listeners>
        <listener class-name="com.demoqa.customelisteners.MyListener"/>
    </listeners>

    <test name="Regression Tests">
        <!-- Optional: define groups first -->
        <groups>
            <run>
                <include name="regression1"/>
            </run>
        </groups>

        <!-- Dynamically scan all classes in package -->
        <packages>
            <package name="com.demoqa.tests.elements"/>
        </packages>
    </test>
</suite>